<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/style"
    tools:context=".Offer_45">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/basketball_star_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/basketball_star" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/article_ball"
                android:textColor="#2D2159"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/term_and_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/term_and_condition"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/term_condition_text"
                android:textColor="#2D2159"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/BALL45"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="BALL45"
                android:textSize="30sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>